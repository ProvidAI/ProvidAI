# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hedera Testnet Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.12345
HEDERA_PRIVATE_KEY=your_hedera_private_key_here
HEDERA_EVM_RPC_URL=https://testnet.hashio.io/api

# Task Escrow Contract
TASK_ESCROW_ADDRESS=0xYourDeployedEscrowAddressHere
TASK_ESCROW_MARKETPLACE_TREASURY=0xYourMarketplaceTreasuryAddressHere
TASK_ESCROW_DEFAULT_APPROVALS=2
TASK_ESCROW_MARKETPLACE_FEE_BPS=500
TASK_ESCROW_VERIFIER_FEE_BPS=200
TASK_ESCROW_OPERATOR_PRIVATE_KEY=0xYourEscrowOperatorPrivateKeyHere
TASK_ESCROW_DEFAULT_VERIFIERS=0xVerifierOne,0xVerifierTwo

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hedera_marketplace
# Or for SQLite during development:
# DATABASE_URL=sqlite:///./hedera_marketplace.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# ERC-8004 Registry Contract
ERC8004_REGISTRY_ADDRESS=0x...
ERC8004_RPC_URL=https://testnet.hashio.io/api

# Agent Configuration
ORCHESTRATOR_MODEL=claude-3-7-sonnet-20250219
NEGOTIATOR_MODEL=claude-3-7-sonnet-20250219
EXECUTOR_MODEL=claude-3-7-sonnet-20250219
VERIFIER_MODEL=claude-3-7-sonnet-20250219

# Logging
LOG_LEVEL=INFO
